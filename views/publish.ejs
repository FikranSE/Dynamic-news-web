
<form action="/publish" class="form-post" enctype="multipart/form-data" method="post">
  <h5>Add Content Article</h5>
  <div class="mb-3">
    <input type="text" class="title" name="title" placeholder="Enter title here">
  </div>
  <div class="mb-3">
    <input type="text" class="excerpt" name="excerpt" placeholder="Short description">
  </div>
  <div class="mb-3 select-container">
    <select name="id_kategori" class="custom-select" >
      <option selected>Choose categories</option>
      <% kategori.forEach(function(kategori) { %>
        <option value="<%= kategori.id_kategori %>"><%= kategori.kategori %></option>
      <% }); %>
    </select> 
  </div>
  <div class="mb-3 con-file">
    <input type="file" name="gambar" id="uploadBtn" onchange="updateFileName(this)">
    <label for="uploadBtn" id="fileLabel">Choose file</label>
    <input type="text" id="selectedFileName" name="gambar">
  </div>
  <input id="body" type="hidden" name="description">
  <trix-editor input="body"></trix-editor>
  <div class="mt-3 con-btn">
    <a href="/dashboard" class="btn-cancel">Cancel</a>
    <button type="submit" class="btn-publish">Publish</button>
  </div>
</form>


