<div class="wrapper-detail-news">
  <div class="left-wrap">
    <div class="pic">
      <img src="/img/<%= detailNews.gambar %>">
    </div>
    <div class="left">
      <span class="kategori">#<%= detailNews.kategori %></span>
      <span class="title"><%= detailNews.title %></span>
      <div class="publisher">
        <span><%= detailNews.username %></span>
        <span class="mx-1">â€¢</span>
        <span><%= moment(detailNews.created_at).format('LL') %></span>
      </div>
      <div class="desc">
        <%- detailNews.description %>
      </div>
    </div>
  </div>
  <div class="right">
    <h4 class="mb-3">Berita terkini</h4>
    <div class="wrap">
      <% allContent.forEach((content)=> { %>
      <div class="col">
        <div class="pic">
          <img src="/img/<%= content.gambar %>">
        </div>
        <a href="/detail-news/<%= content.slug %>"><%= content.title %></a>
        <p class="excerpt"><%= content.excerpt %></p>
      </div>
      <% }); %>
    </div>
  </div>
</div>
